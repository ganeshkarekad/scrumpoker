{% extends 'base.html.twig' %}

{% block title %}Room {{ room.roomKey }} - {{ constant('App\\Constant\\Site::NAME') }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1">Scrum Poker Room</h1>
                    <p class="text-muted mb-0">Room Code: <strong>{{ room.roomKey }}</strong></p>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <span class="text-muted">Welcome, <strong>{{ user.username }}</strong></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Voting Area</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Voting functionality will be implemented here.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Participants ({{ room.users|length }})</h5>
                        </div>
                        <div class="card-body">
                            {% for participant in room.users %}
                                <div class="d-flex align-items-center mb-2">
                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                        {{ participant.username|first|upper }}
                                    </div>
                                    <span>{{ participant.username }}</span>
                                    {% if participant == room.createdBy %}
                                        <span class="badge bg-success ms-2">Host</span>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
